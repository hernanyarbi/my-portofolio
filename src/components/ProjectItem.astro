---
import TechnologieChip from "./TechnologieChip.astro";

const {name ,description, technologies, image}= Astro.props
---

<div class="relative w-full bg-slate-950 isolate overflow-hidden border border-gray-700 p-8 rounded-lg px-6 pt-16 shadow-2xl sm:rounded-3xl sm:px-16 lg:gap-x-20 llg:pt-0">
    <div class="absolute bottom-0 left-[-20%] right-0 top-[-10%] h-[500px] w-[500px] rounded-full bg-[radial-gradient(circle_farthest-side,rgba(255,0,182,.15),rgba(255,255,255,0))]"></div><div class="absolute bottom-0 right-[-20%] top-[-10%] h-[500px] w-[500px] rounded-full bg-[radial-gradient(circle_farthest-side,rgba(255,0,182,.15),rgba(255,255,255,0))]"></div>
    <div class="mx-auto lg:mx-0 lg:flex-auto lg:text-left mb-5 lg:mb-0 justify-between">
        <h3 class="text-2xl font-semibold text-white capitalize">{name}</h3>
        <p class="mb-4 text-lg font-normal text-gray-300">
            {description}
        </p>
        <div class="flex flex-wrap gap-2 mt-4">
            {technologies.map((tech:any)=><TechnologieChip technologie={tech}/>)}
        </div>
    </div>
    <div class="relative mt-20 h-80">
        <div class="image-component-wrapper absolute left-0 top-0 w-[57rem] max-w-none rounded-lg border-spacing-3 image">
            <img alt="project screen " 
                loading="lazy"
                class="rounded-lg hover:scale-105 transition-all"
                decoding="async"
                data-nimg="1"
                style="color:transparent"
                src="/images/projects/suerteo.png"/>
        </div>
    </div>
</div>